@model EmployeeManagementSystem.Models.Entities.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h4>Are you sure you want to delete this employee?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.State)</dt>
    <dd class="col-sm-10">@Model.State</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.City)</dt>
    <dd class="col-sm-10">@Model.City</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
